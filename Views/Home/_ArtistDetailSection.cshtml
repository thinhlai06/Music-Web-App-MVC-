@model MusicWeb.Models.ViewModels.ArtistDetailViewModel

<div id="artist-view" class="content-padding" data-artist-songs='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PopularSongs))'>
    <div class="artist-header" style="position: relative; height: 340px; margin: -30px -30px 30px -30px; padding: 30px; display: flex; flex-direction: column; justify-content: flex-end; background: linear-gradient(transparent, rgba(0,0,0,0.8)), url('@Model.AvatarUrl') center/cover no-repeat;">
        <h1 style="font-size: 96px; font-weight: 900; margin: 0; line-height: 1;">@Model.Name</h1>
        <p style="margin-top: 20px; font-size: 16px; font-weight: 500;">@Model.TotalViews.ToString("N0") lượt xem</p>
    </div>

    <div class="artist-controls" style="display: flex; align-items: center; gap: 24px; margin-bottom: 30px;">
        <button class="play-btn-large" id="artist-play-btn" onclick="playArtistAll()" style="width: 56px; height: 56px; border-radius: 50%; background: #1ed760; border: none; font-size: 24px; color: black; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: transform 0.1s;">
            <i class="fa-solid fa-play"></i>
        </button>
        @if (Model.UserId != null)
        {
            <button class="follow-btn @(Model.IsFollowing ? "active" : "")" onclick="toggleArtistFollow(this, '@Model.UserId')" style="padding: 7px 15px; background: transparent; border: 1px solid rgba(255,255,255,0.3); border-radius: 4px; color: white; font-weight: 700; font-size: 12px; cursor: pointer; text-transform: uppercase; letter-spacing: 1px;">
                @(Model.IsFollowing ? "Đang theo dõi" : "Theo dõi")
            </button>
        }
        <button class="more-btn" style="background: transparent; border: none; color: rgba(255,255,255,0.6); font-size: 24px; cursor: pointer;">
            <i class="fa-solid fa-ellipsis"></i>
        </button>
    </div>

    <div class="artist-content">
        <h2 style="font-size: 24px; font-weight: 700; margin-bottom: 20px;">Phổ biến</h2>
        
        <div class="song-list">
            @for (int i = 0; i < Model.PopularSongs.Count; i++)
            {
                var song = Model.PopularSongs[i];
                <div class="song-row" data-song-id="@song.Id" style="display: grid; grid-template-columns: 20px 4fr 2fr 1fr; gap: 16px; padding: 10px; border-radius: 4px; align-items: center; cursor: pointer; transition: background 0.2s;">
                    <div class="row-index" style="color: #b3b3b3; font-size: 16px; text-align: center;">@(i + 1)</div>
                    <div style="display: flex; align-items: center; gap: 16px;">
                        <img src="@song.CoverUrl" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;">
                        <span style="font-size: 16px; font-weight: 500; color: white;">@song.Title</span>
                    </div>
                    <div style="color: #b3b3b3; font-size: 14px;">@song.ViewCount.ToString("N0")</div>
                    <div style="color: #b3b3b3; font-size: 14px; text-align: right; display: flex; align-items: center; justify-content: flex-end; gap: 20px;">
                         <button class="circle-btn favorite-toggle @(song.IsFavorite ? "active" : "")" style="background: transparent; border: none;">
                            <i class="fa-solid fa-heart"></i>
                        </button>
                        <span>@song.Duration</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .song-row:hover {
        background-color: rgba(255,255,255,0.1);
    }
    .song-row:hover .row-index {
        display: none;
    }
    .song-row:hover::before {
        content: '\f04b';
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        width: 20px;
        text-align: center;
        color: white;
    }
</style>
