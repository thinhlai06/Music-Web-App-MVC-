@model MusicWeb.Models.ViewModels.HomeViewModel

<!-- EDIT PROFILE MODAL -->
<div class="modal-overlay" id="edit-profile-modal">
    <div class="auth-box">
        <div class="auth-close" onclick="toggleEditProfileModal()"><i class="fa-solid fa-xmark"></i></div>
        <h2 style="margin-bottom: 20px;">Chỉnh sửa hồ sơ</h2>
        <form id="edit-profile-form">
            <div style="text-align: center; margin-bottom: 20px;">
                <img id="edit-profile-preview" src="" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover; border: 2px solid var(--purple-primary);">
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Tên hiển thị</label>
                <input type="text" class="auth-input" name="displayName" required>
            </div>
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Avatar URL</label>
                <input type="url" class="auth-input" name="avatarUrl" placeholder="https://...">
            </div>
            
            <div style="margin-bottom: 15px; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 15px;">
                <label style="display: block; margin-bottom: 10px; color: var(--text-secondary); font-size: 14px;">Đổi mật khẩu (tùy chọn)</label>
                <input type="password" class="auth-input" name="currentPassword" placeholder="Mật khẩu hiện tại" style="margin-bottom: 10px;">
                <input type="password" class="auth-input" name="newPassword" placeholder="Mật khẩu mới">
            </div>

            <button type="submit" class="auth-submit">Lưu thay đổi</button>
        </form>
    </div>
</div>

<!-- AUTH MODAL -->
<div class="modal-overlay" id="auth-modal">
    <div class="auth-box">
        <div class="auth-close" onclick="toggleAuthModal()"><i class="fa-solid fa-xmark"></i></div>
        <h2 style="margin-bottom: 10px;" id="auth-title">Đăng nhập</h2>
        <p style="color: var(--text-secondary); margin-bottom: 20px;">Trải nghiệm âm nhạc cá nhân hóa</p>

        <div class="auth-tabs">
            <div class="auth-tab active" data-mode="login">Đăng nhập</div>
            <div class="auth-tab" data-mode="register">Đăng ký</div>
        </div>

        <form id="auth-form">
            <input type="text" class="auth-input" name="displayName" placeholder="Tên hiển thị" data-auth-field="register" style="display:none;">
            <input type="email" class="auth-input" name="email" placeholder="Email" required>
            <input type="password" class="auth-input" name="password" placeholder="Mật khẩu" required>
            <div style="text-align: right; margin-top: -10px; margin-bottom: 10px;" data-auth-field="login">
                <a href="/account/forgot-password" style="color: var(--purple-primary); font-size: 12px; text-decoration: none; transition: opacity 0.2s;">Quên mật khẩu?</a>
            </div>
            <input type="password" class="auth-input" name="confirmPassword" placeholder="Nhập lại mật khẩu" data-auth-field="register" style="display:none;">
            <button type="submit" class="auth-submit">Tiếp tục</button>
        </form>
        
        <div style="display: flex; align-items: center; margin: 20px 0; gap: 10px;">
            <div style="flex: 1; height: 1px; background: rgba(255,255,255,0.1);"></div>
            <span style="color: var(--text-secondary); font-size: 12px;">HOẶC</span>
            <div style="flex: 1; height: 1px; background: rgba(255,255,255,0.1);"></div>
        </div>
        
        <div style="display: flex; flex-direction: column; gap: 10px;">
            <button type="button" class="oauth-btn oauth-btn-google" onclick="loginWithGoogle()">
                <i class="fab fa-google"></i>
                <span>Tiếp tục với Google</span>
            </button>
            <button type="button" class="oauth-btn oauth-btn-facebook" onclick="loginWithFacebook()">
                <i class="fab fa-facebook-f"></i>
                <span>Tiếp tục với Facebook</span>
            </button>
        </div>
        
        <small id="auth-error" style="color:#ff7b7b;display:none;margin-top:10px;"></small>
    </div>
</div>

<!-- PLAYLIST PICKER -->
<div class="playlist-modal" id="playlist-modal">
    <div class="playlist-panel">
        <h3 style="margin-bottom: 20px;">Lưu vào playlist</h3>
        
        <div id="playlist-list-container">
            <div class="playlist-list" id="playlist-list">
                <!-- filled by JS -->
            </div>
            <button class="pill-btn" style="margin-top:10px; width:100%; background: var(--bg-alpha);" onclick="closePlaylistModal()">Hủy</button>
        </div>

        <div id="playlist-create-container" class="hidden">
            <h4 style="margin-bottom: 15px; color: var(--text-secondary);">Tạo playlist mới</h4>
            <form id="playlist-create-form">
                <input class="auth-input" name="playlistName" placeholder="Tên playlist (bắt buộc)" required>
                <div style="display: flex; gap: 10px;">
                    <button type="button" class="pill-btn" style="flex:1; background: var(--bg-alpha);" onclick="openPlaylistModal(state.pendingPlaylistSongId)">Quay lại</button>
                    <button type="submit" class="auth-submit" style="flex:1; margin-top:0;">Tạo</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- LYRICS -->
<div class="lyrics-overlay" id="lyrics-view">
    <div class="lyrics-close" onclick="toggleLyrics()">
        <i class="fa-solid fa-chevron-down"></i>
    </div>
    <div style="text-align: center; margin-bottom: 20px;">
        <h3 style="font-size: 24px;" id="lyrics-song-title">—</h3>
        <p style="color: var(--text-secondary);" id="lyrics-artist">—</p>
    </div>
    <div class="lyrics-content" id="lyrics-content"></div>
</div>

<!-- USER LIST MODAL -->
<div class="modal-overlay" id="user-list-modal">
    <div class="auth-box" style="max-height: 80vh; display: flex; flex-direction: column;">
        <div class="auth-close" onclick="closeUserListModal()"><i class="fa-solid fa-xmark"></i></div>
        <h2 style="margin-bottom: 20px;" id="user-list-title">Danh sách</h2>
        <div style="text-align: left; margin-bottom: 15px;">
             <input type="text" id="user-list-search" class="auth-input" placeholder="Tìm kiếm" style="margin-bottom: 0;">
        </div>
        <div id="user-list-content" style="overflow-y: auto; flex: 1; padding-right: 5px;">
            <!-- Users populated by JS -->
        </div>
    </div>
</div>

<!-- USER ALBUM MODALS -->
<!-- CREATE ALBUM MODAL -->
<div class="modal-overlay" id="create-album-modal">
    <div class="auth-box">
        <div class="auth-close" onclick="closeCreateAlbumModal()"><i class="fa-solid fa-xmark"></i></div>
        <h2 style="margin-bottom: 20px;">Tạo Album Mới</h2>
        <form id="create-album-form">
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Tên album</label>
                <input type="text" class="auth-input" name="name" required>
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Mô tả (tùy chọn)</label>
                <textarea class="auth-input" name="description" rows="3" style="resize: vertical;"></textarea>
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Ảnh bìa (tùy chọn)</label>
                <input type="file" class="auth-input" name="coverFile" accept="image/*">
            </div>
            <div class="form-group" style="margin-bottom: 20px;">
                <label class="custom-checkbox-label" style="display: flex; align-items: center; gap: 10px; cursor: pointer;">
                    <input type="checkbox" name="isPublic" style="width: auto; margin: 0;">
                    <span>Công khai (Mọi người có thể xem)</span>
                </label>
            </div>
            <div style="display: flex; gap: 10px; margin-top: 10px;">
                <button type="button" class="modal-btn modal-btn-secondary" onclick="closeCreateAlbumModal()">
                    <i class="fa-solid fa-xmark"></i> Hủy
                </button>
                <button type="submit" class="modal-btn modal-btn-primary">
                    <i class="fa-solid fa-plus"></i> Tạo Album
                </button>
            </div>
        </form>
    </div>
</div>

<!-- EDIT ALBUM MODAL -->
<div class="modal-overlay" id="edit-album-modal">
    <div class="auth-box">
        <div class="auth-close" onclick="closeEditAlbumModal()"><i class="fa-solid fa-xmark"></i></div>
        <h2 style="margin-bottom: 20px;">Chỉnh sửa Album</h2>
        <form id="edit-album-form">
            <input type="hidden" name="albumId">
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Tên album</label>
                <input type="text" class="auth-input" name="name" required>
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Mô tả</label>
                <textarea class="auth-input" name="description" rows="3" style="resize: vertical;"></textarea>
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Ảnh bìa mới (tùy chọn)</label>
                <input type="file" class="auth-input" name="coverFile" accept="image/*">
            </div>
            <div class="form-group" style="margin-bottom: 20px;">
                <label class="custom-checkbox-label" style="display: flex; align-items: center; gap: 10px; cursor: pointer;">
                    <input type="checkbox" name="isPublic" style="width: auto; margin: 0;">
                    <span>Công khai</span>
                </label>
            </div>
            <div style="display: flex; gap: 10px; margin-top: 10px;">
                <button type="button" class="modal-btn modal-btn-secondary" onclick="closeEditAlbumModal()">
                    <i class="fa-solid fa-xmark"></i> Hủy
                </button>
                <button type="submit" class="modal-btn modal-btn-primary">
                    <i class="fa-solid fa-save"></i> Lưu
                </button>
                <button type="button" class="modal-btn modal-btn-danger" onclick="deleteUserAlbumConfirm()">
                    <i class="fa-solid fa-trash"></i> Xóa
                </button>
            </div>
        </form>
    </div>
</div>

<!-- ADD SONG TO ALBUM MODAL -->
<div class="modal-overlay" id="add-song-album-modal">
    <div class="auth-box">
        <div class="auth-close" onclick="closeAddSongToAlbumModal()"><i class="fa-solid fa-xmark"></i></div>
        <h2 style="margin-bottom: 20px;">Thêm Bài Hát Vào Album</h2>
        
        <div class="auth-tabs">
            <div class="auth-tab active" data-mode="existing">Từ bài hát đã có</div>
            <div class="auth-tab" data-mode="upload">Upload mới</div>
        </div>

        <!-- Existing Songs Tab -->
        <div id="existing-songs-tab" class="add-song-tab">
            <input type="text" class="auth-input" id="song-search-input" placeholder="Tìm kiếm bài hát..." style="margin-bottom: 15px;">
            <div id="user-songs-list" style="max-height: 300px; overflow-y: auto;">
                <!-- Populated by JS -->
            </div>
        </div>

        <!-- Upload New Tab -->
        <div id="upload-song-tab" class="add-song-tab hidden">
            <form id="upload-song-album-form">
                <div class="form-group" style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Tên bài hát</label>
                    <input type="text" class="auth-input" name="title" required>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">File nhạc</label>
                    <input type="file" class="auth-input" name="audioFile" accept="audio/*" required>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Ảnh bìa (tùy chọn)</label>
                    <input type="file" class="auth-input" name="coverFile" accept="image/*">
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; color: var(--text-secondary);">Mô tả (tùy chọn)</label>
                    <textarea class="auth-input" name="description" rows="2" style="resize: vertical;"></textarea>
                </div>
                <button type="submit" class="auth-submit">Upload & Thêm vào Album</button>
            </form>
        </div>
    </div>
</div>
