@model MusicWeb.Models.ViewModels.AdminAlbumsViewModel
@{
    ViewData["Title"] = "Quản lý Album";
}

<div class="admin-header">
    <h2><i class="fa-solid fa-compact-disc" style="margin-right: 10px; color: var(--purple-primary);"></i>Quản lý Album</h2>
    <a href="/Admin/CreateAlbum" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Thêm Album
    </a>
</div>

<div class="admin-tabs">
    <a href="?tab=system" class="admin-tab @(ViewBag.Tab == "system" || ViewBag.Tab == null ? "active" : "")">
        <i class="fa-solid fa-database"></i> Albums Hệ Thống (@Model.SystemAlbums.Count)
    </a>
    <a href="?tab=user" class="admin-tab @(ViewBag.Tab == "user" ? "active" : "")">
        <i class="fa-solid fa-user"></i> Albums Người Dùng (@Model.UserAlbums.Count)
    </a>
</div>

<div class="admin-card">
    @if (ViewBag.Tab == "user")
    {
        <!-- User Albums -->
        @if (!Model.UserAlbums.Any())
        {
            <div style="text-align: center; padding: 50px; color: var(--text-secondary);">
                <i class="fa-solid fa-music" style="font-size: 48px; margin-bottom: 15px; opacity: 0.5;"></i>
                <p>Chưa có album người dùng nào</p>
            </div>
        }
        else
        {
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Album</th>
                        <th>Người tạo</th>
                        <th>Số bài hát</th>
                        <th>Công khai</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var album in Model.UserAlbums)
                    {
                        <tr>
                            <td>@album.Id</td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <img src="@(album.CoverUrl ?? "https://picsum.photos/50")" 
                                         style="width: 45px; height: 45px; border-radius: 6px; object-fit: cover;">
                                    <div>
                                        <div>@album.Name</div>
                                        <div style="font-size: 12px; color: var(--text-secondary);">@album.Description</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <img src="@(album.Owner?.AvatarUrl ?? "https://ui-avatars.com/api/?name=" + album.Owner?.DisplayName)" 
                                         style="width: 25px; height: 25px; border-radius: 50%;">
                                    @album.Owner?.DisplayName
                                </div>
                            </td>
                            <td>@album.UserAlbumSongs?.Count bài</td>
                            <td>
                                @if (album.IsPublic)
                                {
                                    <span class="badge badge-success"><i class="fa-solid fa-globe"></i> Công khai</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning"><i class="fa-solid fa-lock"></i> Riêng tư</span>
                                }
                            </td>
                            <td>@album.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <form asp-action="ToggleUserAlbumVisibility" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@album.Id" />
                                    <button type="submit" class="btn btn-outline" style="padding: 5px 10px;" 
                                            title="@(album.IsPublic ? "Chuyển thành riêng tư" : "Chuyển thành công khai")">
                                        <i class="fa-solid @(album.IsPublic ? "fa-lock" : "fa-globe")"></i>
                                    </button>
                                </form>
                                <form asp-action="DeleteUserAlbum" method="post" style="display: inline;" 
                                      onsubmit="return confirm('Xóa album này? Hành động không thể hoàn tác.');">
                                    <input type="hidden" name="id" value="@album.Id" />
                                    <button type="submit" class="btn btn-danger" style="padding: 5px 10px;">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    else
    {
        <!-- System Albums -->
        @if (!Model.SystemAlbums.Any())
        {
            <div style="text-align: center; padding: 50px; color: var(--text-secondary);">
                <i class="fa-solid fa-compact-disc" style="font-size: 48px; margin-bottom: 15px; opacity: 0.5;"></i>
                <p>Chưa có album nào</p>
            </div>
        }
        else
        {
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Album</th>
                        <th>Nghệ sĩ</th>
                        <th>Số bài hát</th>
                        <th>Ngày phát hành</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var album in Model.SystemAlbums)
                    {
                        <tr>
                            <td>@album.Id</td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <img src="@(album.CoverUrl ?? "https://picsum.photos/50")" 
                                         style="width: 45px; height: 45px; border-radius: 6px; object-fit: cover;">
                                    <span>@album.Title</span>
                                </div>
                            </td>
                            <td>@album.Artist?.Name</td>
                            <td>@album.Songs?.Count bài</td>
                            <td>@album.ReleaseDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="/Admin/EditAlbum/@album.Id" class="btn btn-outline" style="padding: 5px 10px;">
                                    <i class="fa-solid fa-edit"></i>
                                </a>
                                <form asp-action="DeleteAlbum" method="post" style="display: inline;" 
                                      onsubmit="return confirm('Xóa album này?');">
                                    <input type="hidden" name="id" value="@album.Id" />
                                    <button type="submit" class="btn btn-danger" style="padding: 5px 10px;">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>
